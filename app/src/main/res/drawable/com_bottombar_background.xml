<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 选中按下 -->
    <item android:state_checked="true" android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="#C0032A3B" android:startColor="#C0065E86" />
            <stroke android:width="1dp" android:color="#FF056FA0" />
            <corners android:radius="6dp" />
        </shape></item>
	
    <!-- 选中正常 -->
    <item android:state_checked="true"><shape>
            <gradient android:angle="270" android:endColor="#C0232728" android:startColor="#C04C5355" />
            <stroke android:width="1dp" android:color="#F0575E5F" />
            <corners android:radius="6dp" />
        </shape></item>
	
    <!-- 普通按下-->
    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="#C0032A3B" android:startColor="#C0065E86" />
            <stroke android:width="1dp" android:color="#FF056FA0" />
            <corners android:radius="6dp" />
        </shape></item>
     
    <!-- 普通 -->

</selector>